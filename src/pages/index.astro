	<script>
		document.addEventListener('DOMContentLoaded', function() {
			const heroSection = document.getElementById('hero-section');
			const floatingCta = document.getElementById('floating-cta');
			const ctaContainer = document.querySelector('.cta-container');

			// Animated reasons
			const reasons = [
				'safer collaboration',
				'serious data validation',
				'permission control',
				'interactive data apps',
				'AI assistance',
				'API integration',
				'workflow automation',
				'advanced security'
			];
			
			let currentIndex = 0;
			const animatedReasonElement = document.getElementById('animated-reason');
			const animatedReasonContainer = document.querySelector('.animated-reason-container');
			let animationInterval;
			let isHovering = false;
			const FAST_INTERVAL = 800; // Faster default speed
			const SLOW_INTERVAL = 3000; // Slower speed on hover
			
			function updateReason() {
				// Fade out
				animatedReasonElement.style.opacity = '0';
				
				setTimeout(() => {
					currentIndex = (currentIndex + 1) % reasons.length;
					animatedReasonElement.textContent = reasons[currentIndex];
					
					// Fade in
					animatedReasonElement.style.opacity = '1';
				}, 300);
			}
			
			function startAnimation(interval) {
				if (animationInterval) {
					clearInterval(animationInterval);
				}
				animationInterval = setInterval(updateReason, interval);
			}
			
			// Initialize with first reason
			animatedReasonElement.textContent = reasons[0];
			animatedReasonElement.style.opacity = '1';
			
			// Start with fast animation
			startAnimation(FAST_INTERVAL);
			
			// Add hover listeners
			animatedReasonContainer.addEventListener('mouseenter', () => {
				isHovering = true;
				if (animationInterval) {
					clearInterval(animationInterval);
				}
			});
			
			animatedReasonContainer.addEventListener('mouseleave', () => {
				isHovering = false;
				startAnimation(FAST_INTERVAL);
			});

			window.addEventListener('scroll', function() {
				// Handle parallax effect
				const parallaxSections = document.querySelectorAll('.parallax-section');
				parallaxSections.forEach(section => {
					const distance = window.pageYOffset - section.offsetTop;
					const parallaxBg = section.querySelector('.parallax-bg');
					parallaxBg.style.transform = `translateY(${distance * 0.5}px)`;
				});

			});
		});
	</script>
