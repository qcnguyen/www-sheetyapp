---
import type { Article } from '../data/articles';

interface Props {
  article: Article;
}

const { article } = Astro.props;
---

<article class="article-card">
  {article.image && (
    <img src={article.image} alt={article.title} class="article-image" />
  )}
  <div class="article-content">
    <div class="article-meta">
      <time datetime={article.date}>
        {new Date(article.date).toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </time>
      <span>•</span>
      <span>{article.author}</span>
    </div>
    
    <h2 class="article-title">
      <a href={`/articles/${article.slug}`} class="article-link">
        {article.title}
      </a>
    </h2>
    
    <p class="article-excerpt">
      {article.excerpt}
    </p>
    
    <div class="article-tags">
      {article.tags.map(tag => (
        <span class="tag">
          {tag}
        </span>
      ))}
    </div>
    
    <a 
      href={`/articles/${article.slug}`} 
      class="read-more-btn"
    >
      Read More →
    </a>
  </div>
</article>

<style>
  .article-card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.5);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: row;
    align-items: stretch;
  }

  .article-card:hover {
    transform: translateX(5px);
    box-shadow: 0 15px 35px rgba(49, 130, 206, 0.15);
  }

  .article-image {
    width: 280px;
    min-width: 280px;
    height: auto;
    object-fit: cover;
  }

  .article-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  @media (max-width: 768px) {
    .article-card {
      flex-direction: column;
    }

    .article-image {
      width: 100%;
      height: 200px;
    }

    .article-content {
      padding: 1.5rem;
    }
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #718096;
    margin-bottom: 0.75rem;
  }

  .article-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .article-link {
    color: #2d3748;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .article-link:hover {
    color: #3182ce;
  }

  .article-excerpt {
    color: #4a5568;
    line-height: 1.7;
    margin-bottom: 1rem;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .tag {
    padding: 0.375rem 0.75rem;
    background: linear-gradient(135deg, rgba(49, 130, 206, 0.1), rgba(56, 178, 172, 0.1));
    color: #3182ce;
    font-size: 0.875rem;
    border-radius: 9999px;
    font-weight: 600;
    border: 1px solid rgba(49, 130, 206, 0.2);
  }

  .read-more-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.65rem 1.5rem;
    background: linear-gradient(135deg, #3182ce, #38b2ac);
    color: white;
    border-radius: 9999px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 14px rgba(49, 130, 206, 0.35);
    align-self: flex-start;
  }

  .read-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(49, 130, 206, 0.45);
  }
</style>
